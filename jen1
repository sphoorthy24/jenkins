pipeline {
    agent any

    environment {
        GIT_SSH_COMMAND = 'ssh -o StrictHostKeyChecking=no'
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout([$class: 'GitSCM', 
                              branches: [[name: '*/master']], 
                              userRemoteConfigs: [[credentialsId: '0c3a267f-f450-447b-8beb-b00e9bf5b383', url: 'git@github.com:sphoorthy24/jenkins.git']]])
                }
            }
        }

        // Add additional stages as needed
        stage('Build') {
            steps {
                // Your build steps go here
                sh 'mvn clean install' // Example Maven build step
            }
        }

        // Add more stages as needed
    }

    post {
        success {
            echo 'Pipeline succeeded! You can add more post-success actions here.'
        }
        failure {
            echo 'Pipeline failed! You can add more post-failure actions here.'
        }
    }
}
